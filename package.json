{
  "name": "echo-messenger",
  "productName": "ECHO",
  "private": true,
  "version": "1.0.0",
  "description": "Удобный мессенджер для быстрого общения в игре", 
  "author": "GeniusNear",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder -c.extraMetadata.main=dist-electron/main.js",
    "publish": "tsc && vite build && electron-builder --publish always -c.extraMetadata.main=dist-electron/main.js"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.97.0",
    "electron-updater": "^6.8.3",
    "lucide-react": "^0.575.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.2.1",
    "@types/react": "^18.2.64",
    "@types/react-dom": "^18.2.21",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^30.0.1",
    "electron-builder": "^24.13.3",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "tailwindcss": "^4.2.1",
    "typescript": "^5.2.2",
    "vite": "^5.1.6",
    "vite-plugin-electron": "^0.28.6",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/GeniusNear/echo.git"
  },
  "build": {
    "appId": "com.echo.messenger",
    "productName": "ECHO",
    "directories": {
      "output": "release"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "github",
        "owner": "GeniusNear",
        "repo": "echo-messenger"
      }
    ]
  }
}
